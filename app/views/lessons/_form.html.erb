<%= render('layouts/errors', :object => @lesson) %>

<%= form_for [@section, @lesson] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <br><br>
  <%= f.label :order %>
  <%= f.number_field :order %>
  <br><br>
  <p><%= f.submit %></p>
<% end %>
